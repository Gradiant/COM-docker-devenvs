// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.183.0/containers/cpp
{
	"name": "GRD C++ DEV ENVIRONMENT",
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick an Debian / Ubuntu OS version: debian-10, debian-9, ubuntu-20.04, ubuntu-18.04
		"args": {
			"VARIANT": "ubuntu-20.04"
		}
	},
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"psi-header.config": {
			"author": "<Author name>",
			"company": "Centro Tecnolóxico de Telecomunicacións de Galicia",
			"copyrightHolder": "GRADIANT",
			"authorEmail": "<author email>",
			"blankLinesAfter": 1
		},
		"psi-header.lang-config": [
			{
				"language": "cpp",
				"begin": "/**",
				"end": "*/",
				"prefix": "* ",
				"blankLinesAfter": 1
			}
		],
		"psi-header.templates": [
			{
				"language": "*",
				"template": [
					"<<filename>>",
					"<<project>>",
					" ",
					"Maintainer <<author>> (<<authoremail>>)",
					" ",
					"Created @ <<dateformat('dddd, Do MMMM YYYY h:mm:ss a')>>",
					"Copyright (c) <<year>> <<copyrightholder>>",
					"All Rights Reserved"
				]
			}
		],
		"psi-header.variables": [
			[
				"project",
				"project-name"
			]
		],
		"psi-header.changes-tracking": {
			"autoHeader": "autoSave",
		},
		"[cpp]": {
			"editor.autoIndent": "full"
		},
		"editor.matchBrackets": "always",
		"editor.formatOnSave": true,
		"C_Cpp.formatting": "Default",
		"editor.quickSuggestions": {
			"other": true,
			"comments": false,
			"strings": false
		},
		"editor.codeLens": true,
		"editor.rulers": [
			80,
			100
		],
		"editor.minimap.maxColumn": 100,
		"cmake.cmakePath": "cmake",
		"terminal.integrated.defaultProfile.linux": "zsh",
		"taskExplorer.exclude": [
			"**/.vscode-test/**",
			"**/bin/**",
			"**/build/**",
			"**/CompiledOutput/**",
			"**/dist/**",
			"**/doc/**",
			"**/ext/**",
			"**/out/**",
			"**/output/**",
			"**/packages/**",
			"**/release/**",
			"**/releases/**",
			"**/samples/**",
			"**/sdks/**",
			"**/static/**",
			"**/target/**",
			"**/test/**",
			"**/third_party/**",
			"**/vendor/**",
			"**/work/**",
			"**/.devcontainer/**"
		],
		"C/C++ Include Guard.Macro Type": "Filename",
		"C/C++ Include Guard.Remove Extension": false,
		"C/C++ Include Guard.Prefix": "SIOT_",
		"testMate.cpp.test.runtimeLimit": 120
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-vscode.cpptools",
		"ms-vscode.cmake-tools",
		"twxs.cmake",
		"hbenl.vscode-test-explorer",
		"streetsidesoftware.code-spell-checker",
		"fabiospampinato.vscode-diff",
		"oouo-diogo-perdigao.docthis",
		"betwo.vscode-doxygen-runner",
		"cschlosser.doxdocgen",
		"donjayamanne.githistory",
		"eamodio.gitlens",
		"christian-kohler.path-intellisense",
		"psioniq.psi-header",
		"streetsidesoftware.code-spell-checker-spanish",
		"gruntfuggly.todo-tree",
		"visualstudioexptteam.vscodeintellicode",
		"akiramiyakoda.cppincludeguard",
		"matepek.vscode-catch2-test-adapter",
		"ryu1kn.partial-diff",
		"connorshea.vscode-test-explorer-status-bar",
		"fabiospampinato.vscode-todo-plus",
		"sleistner.vscode-fileutils",
		"ms-vsliveshare.vsliveshare"
	],
	// From vscode documentation, persist bash history and installed extensions on rebuild
	// https://code.visualstudio.com/docs/remote/containers-advanced#_persist-bash-history-between-runs
	"mounts": [
		"source=project-name-bashhistory,target=/commandhistory,type=volume"
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "gcc -v",
	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode"
}